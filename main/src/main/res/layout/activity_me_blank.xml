<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_me_top"
        >


        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:padding="10dp"
            android:src="@mipmap/icon_back"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:tint="@color/white"
            ></ImageView>


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/avatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="50dp"
            android:scaleType="centerCrop"
            app:riv_oval="true"
            android:layout_toRightOf="@id/btn_back"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/btn_back"
            android:layout_marginLeft="25dp"
            android:layout_below="@id/avatar"
            android:layout_marginTop="10dp"
            >


            <TextView
                android:id="@+id/tv_wh_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="13sp"></TextView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/avatar"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="25dp"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="网红星级："
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    ></TextView>

                <TextView
                    android:id="@+id/tv_wh_leve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="13sp"></TextView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="9dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="代理级别："
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    ></TextView>

                <TextView
                    android:id="@+id/tv_dl_leve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C0"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    ></TextView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="9dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="贡献数值："
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    ></TextView>

                <TextView
                    android:id="@+id/tv_contribution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    ></TextView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="9dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="区合伙人："
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    ></TextView>

                <TextView
                    android:id="@+id/tv_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="否"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    ></TextView>


            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white_press"
        ></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            >

            <TextView
                android:id="@+id/tv_bounty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_33"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"
                ></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的赏金"
                android:textColor="@color/text_color_33"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                ></TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            >

            <TextView
                android:id="@+id/tv_mili"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_33"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"
                ></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可用米粒"
                android:textColor="@color/text_color_33"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                ></TextView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            >

            <TextView
                android:id="@+id/tv_up_mili"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_33"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"
                ></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="锁仓米粒"
                android:textColor="@color/text_color_33"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                ></TextView>

        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white_press"
        ></View>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:src="@mipmap/menu_guangao_img"
        android:scaleType="fitXY"
        ></ImageView>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white_press"
        ></View>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <LinearLayout
            android:id="@+id/ll_personal_information"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"

            android:gravity="center"
            >

            <ImageView
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:src="@mipmap/personal_information_img"
                android:scaleType="fitXY"
                ></ImageView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人资料"
                android:textSize="13sp"
                android:textColor="@color/text_color_66"
                ></TextView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_advance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:src="@mipmap/advance_img"
                android:scaleType="fitXY"
                ></ImageView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我要晋级"
                android:textColor="@color/text_color_66"
                android:textSize="13sp"></TextView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_reward_promotion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:src="@mipmap/reward_promotion_img"
                android:scaleType="fitXY"
                ></ImageView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打赏晋级"
                android:textSize="13sp"
                android:textColor="@color/text_color_66"
                ></TextView>

        </LinearLayout>


    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="35dp"
        >

        <LinearLayout
            android:id="@+id/ll_buddy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:src="@mipmap/buddy_img"
                android:scaleType="fitXY"
                ></ImageView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的好友"
                android:textSize="13sp"
                android:textColor="@color/text_color_66"
                ></TextView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_otc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:src="@mipmap/otc_img"
                android:scaleType="fitXY"
                ></ImageView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OTC"
                android:textSize="13sp"
                android:textColor="@color/text_color_66"
                ></TextView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_accelerator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:src="@mipmap/accelerator_img"
                android:scaleType="fitXY"
                ></ImageView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加速器"
                android:textSize="13sp"
                android:textColor="@color/text_color_66"
                ></TextView>

        </LinearLayout>


    </LinearLayout>



</LinearLayout>