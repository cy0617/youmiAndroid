<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:paddingBottom="15dp"
        android:background="@color/white"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >


            <TextView
                android:id="@+id/tv_order_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="买家已付款"
                android:textColor="@color/text_color_eb7946"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020-06-24 19:45"
                android:textColor="@color/view_color_99"
                android:layout_marginLeft="10dp"
                android:textSize="12sp" />



        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#10000000"
            ></View>

        <RelativeLayout
            android:id="@+id/rl_itemLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            >


            <ImageView
                android:id="@+id/iv_picture"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/default_image" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/iv_picture"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                >

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:lines="2"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="70dp"
                    android:text="商品名字"
                    android:textColor="@color/text_color_23"
                    android:textSize="12sp" />



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerVertical="true"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥"
                            android:textColor="@color/text_color_33"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="360.00"
                            android:textColor="@color/text_color_33"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="x1"
                        android:textColor="@color/view_color_99"
                        android:layout_marginRight="15dp"
                        android:layout_centerVertical="true"
                        android:textSize="12sp" />
                </RelativeLayout>



            </LinearLayout>



        </RelativeLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            >


            <TextView
                android:id="@+id/tv_goods_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共1件商品，合计"
                android:textColor="@color/text_color_33"
                android:textSize="11sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:layout_marginLeft="5dp"
                android:textColor="@color/text_color_eb7946"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_money_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="360.00"
                android:textColor="@color/text_color_eb7946"
                android:textSize="12sp" />

        </LinearLayout>


    </LinearLayout>



</RelativeLayout>