<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/shape_white_5"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邀请码"
                android:textColor="@color/text_color_eb7946"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginTop="34dp"
                ></TextView>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="@drawable/shape_et_code_5"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                >


                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请输入邀请码"
                    android:paddingLeft="10dp"
                    android:textColor="@color/light_gray_text"
                    android:textColorHint="@color/light_gray_text"
                    android:textSize="12sp"
                    />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:layout_marginTop="35dp"
                >

                <TextView
                    android:id="@+id/tv_close"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="取消"
                    android:textSize="15sp"
                    android:background="@drawable/shape_left_bt_5"
                    android:gravity="center"
                    android:textColor="@color/gray_text"
                    ></TextView>


                <TextView
                    android:id="@+id/tv_yes"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="确认"
                    android:background="@drawable/shape_right_bt_5"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    ></TextView>


            </LinearLayout>


        </LinearLayout>








</RelativeLayout>